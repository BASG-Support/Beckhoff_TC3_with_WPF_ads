<UserControl x:Class="ADS_Sample.Control.DigitalIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50"
             Width="150" Height="30">
    <Grid>
        <Ellipse x:Name="StateIndicator" Fill="Gray" Margin="0" Stroke="Black" VerticalAlignment="Center" HorizontalAlignment="Right" Width="25" Height="25"/>
        <Label x:Name="IndicatorLabel" Content="Label" VerticalAlignment="Center" HorizontalAlignment="Left" />
        <Button HorizontalAlignment="Left" Height="24" Margin="0,2,0,0" VerticalAlignment="Top" Width="175" Click="Button_Click" Opacity="0"/>
    </Grid>
</UserControl>
